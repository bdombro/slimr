{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!node_modules",
			"!.git",
			"!.vscode",
			"!**/cjs",
			"!**/dist",
			"!**/esm",
			"!**/*.d.ts",
			"!**/*.html",
			"!**/*.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAriaPropsSupportedByRole": "off",
				"useValidAnchor": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noImportantStyles": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedFunctionParameters": "off",
				"noUnusedImports": "off",
				"noUnusedVariables": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"style": {
				"noDescendingSpecificity": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off",
				"noDuplicateCustomProperties": "off",
				"noExplicitAny": "off",
				"noTsIgnore": "off",
				"useIterableCallbackReturn": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
